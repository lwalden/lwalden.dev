{
  "permissions": {
    "allow": [
      "mcp__context7__query-docs",
      "Bash(npm create astro@latest . -- --template blog --typescript strict --no-install --no-git)",
      "Read(//d/Source/**)",
      "Bash(npm install)",
      "Bash(npm run build)",
      "Bash(gh repo view --json defaultBranchRef)",
      "Bash(gh repo edit --default-branch main)",
      "Bash(nslookup lwalden.dev)",
      "Bash(ls \"d:/Source/lwalden.dev/\"*.txt)",
      "Bash(git -C \"d:/Source/lwalden.dev\" status --short)"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf $HOME:*)",
      "Bash(rm -rf C::*)",
      "Bash(rm -rf .:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard origin:*)",
      "Bash(git clean -fd:*)",
      "Bash(chmod -R 777:*)"
    ],
    "additionalDirectories": [
      "d:\\Source\\astro-scaffold",
      "d:\\Source\\lwalden.dev\\.github\\workflows"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-end-timestamp.js",
            "timeout": 10
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-end-commit.js",
            "timeout": 30
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/pre-compact-save.js",
            "timeout": 15
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start-context.js",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
