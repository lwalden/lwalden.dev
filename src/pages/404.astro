---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Page Not Found" description="The page you're looking for doesn't exist." />
		<meta name="robots" content="noindex" />
	</head>
	<body class="antialiased flex flex-col min-h-screen" data-zone="light">
		<Header />
		<main class="flex-1 max-w-5xl mx-auto px-4 sm:px-6 py-24">
			<p class="font-mono mb-2" style="font-size:0.75rem;letter-spacing:0.06em;text-transform:uppercase;color:var(--light-text-3);">404</p>
			<h1 class="font-bold mb-4" style="font-size:2rem;color:var(--light-text);letter-spacing:-0.03em;">Page not found</h1>
			<p class="mb-8" style="color:var(--light-text-2);">
				That page doesn't exist. It may have moved or you may have followed a broken link.
			</p>
			<a href="/"
				class="inline-flex items-center px-5 py-2.5 rounded font-medium text-sm no-underline transition-colors"
				style="background:var(--light-text);color:var(--light-bg);"
				onmouseover="this.style.background='var(--light-text-2)'" onmouseout="this.style.background='var(--light-text)'">
				Back to Home
			</a>
		</main>
		<Footer />
	</body>
</html>
