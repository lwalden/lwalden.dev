---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Page Not Found" description="The page you're looking for doesn't exist." />
		<meta name="robots" content="noindex" />
	</head>
	<body style="background-color:var(--bg-base);color:var(--text-primary);" class="antialiased">
		<Header />
		<main class="max-w-5xl mx-auto px-4 sm:px-6 py-24 text-center">
			<p class="text-8xl font-bold mb-4" style="color:var(--border-emphasis);">404</p>
			<h1 class="text-2xl font-bold mb-4" style="color:var(--text-primary);">Page not found</h1>
			<p class="mb-8" style="color:var(--text-secondary);">
				That page doesn't exist. It may have moved or you may have followed a broken link.
			</p>
			<a href="/"
				class="inline-flex items-center px-5 py-2.5 rounded-lg font-medium text-sm no-underline transition-colors"
				style="background:var(--accent);color:#0d1117;"
				onmouseover="this.style.background='var(--accent-hover)'" onmouseout="this.style.background='var(--accent)'">
				Back to Home
			</a>
		</main>
		<Footer />
	</body>
</html>
