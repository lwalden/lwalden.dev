---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { siteConfig } from '../data/siteConfig';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
	.filter((p) => p.data.featured)
	.sort((a, b) => a.data.sortOrder - b.data.sortOrder)
	.slice(0, 3);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead
			title="Home"
			description={siteConfig.description}
			isHomePage={true}
		/>
	</head>
	<body style="background-color:var(--bg-base);color:var(--text-primary);" class="antialiased">
		<Header />

		<!-- Hero -->
		<section style="background:linear-gradient(160deg,rgba(88,166,255,0.04) 0%,transparent 50%);">
			<div class="max-w-5xl mx-auto px-4 sm:px-6 pt-20 pb-16">
				<div class="max-w-2xl">
					<p class="text-sm font-mono mb-4" style="color:var(--accent);">Senior Software Engineer</p>
					<h1 class="font-bold tracking-tight mb-4" style="font-size:clamp(2rem,5vw,3rem);color:var(--text-primary);">
						Laurance Walden
					</h1>
					<p class="text-lg font-medium mb-5" style="color:var(--link);">
						.NET &amp; Azure · AI &amp; Agentic Systems
					</p>
					<p class="text-base leading-relaxed mb-8" style="color:var(--text-secondary);">
						I build AI-integrated enterprise systems and write about making .NET work with the agentic future.
						12 years of shipping production software — now making it visible.
					</p>
					<div class="flex flex-wrap gap-3 mb-8">
						<a href="/blog"
							class="inline-flex items-center px-5 py-2.5 rounded-lg font-medium text-sm no-underline transition-colors"
							style="background:var(--accent);color:#0d1117;"
							onmouseover="this.style.background='var(--accent-hover)'" onmouseout="this.style.background='var(--accent)'">
							Read the Blog
						</a>
						<a href="/projects"
							class="inline-flex items-center px-5 py-2.5 rounded-lg font-medium text-sm no-underline transition-colors"
							style="background:transparent;border:1px solid var(--border-emphasis);color:var(--text-secondary);"
							onmouseover="this.style.borderColor='var(--link)';this.style.color='var(--text-primary)'"
							onmouseout="this.style.borderColor='var(--border-emphasis)';this.style.color='var(--text-secondary)'">
							View Projects
						</a>
					</div>
					<div class="flex gap-5">
						<a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer"
							class="text-sm no-underline transition-colors" style="color:var(--text-tertiary);"
							onmouseover="this.style.color='var(--text-primary)'" onmouseout="this.style.color='var(--text-tertiary)'">
							GitHub ↗
						</a>
						<a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer"
							class="text-sm no-underline transition-colors" style="color:var(--text-tertiary);"
							onmouseover="this.style.color='var(--text-primary)'" onmouseout="this.style.color='var(--text-tertiary)'">
							LinkedIn ↗
						</a>
						<a href={siteConfig.social.medium} target="_blank" rel="noopener noreferrer"
							class="text-sm no-underline transition-colors" style="color:var(--text-tertiary);"
							onmouseover="this.style.color='var(--text-primary)'" onmouseout="this.style.color='var(--text-tertiary)'">
							Medium ↗
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Featured Projects -->
		{featuredProjects.length > 0 && (
			<section class="max-w-5xl mx-auto px-4 sm:px-6 py-12" style="border-top:1px solid var(--border-muted);">
				<div class="flex items-baseline justify-between mb-8">
					<h2 class="text-xl font-semibold" style="color:var(--text-primary);">Featured Projects</h2>
					<a href="/projects" class="text-sm no-underline transition-colors" style="color:var(--link);"
						onmouseover="this.style.color='var(--link-hover)'" onmouseout="this.style.color='var(--link)'">
						All projects →
					</a>
				</div>
				<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
					{featuredProjects.map((project) => (
						<ProjectCard
							title={project.data.title}
							description={project.data.description}
							technologies={project.data.technologies}
							repo={project.data.repo}
							demo={project.data.demo}
							status={project.data.status}
							slug={project.id}
						/>
					))}
				</div>
			</section>
		)}

		<!-- Latest Blog Posts -->
		{recentPosts.length > 0 && (
			<section class="max-w-5xl mx-auto px-4 sm:px-6 py-12" style="border-top:1px solid var(--border-muted);">
				<div class="flex items-baseline justify-between mb-8">
					<h2 class="text-xl font-semibold" style="color:var(--text-primary);">Latest Posts</h2>
					<a href="/blog" class="text-sm no-underline transition-colors" style="color:var(--link);"
						onmouseover="this.style.color='var(--link-hover)'" onmouseout="this.style.color='var(--link)'">
						All posts →
					</a>
				</div>
				<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
					{recentPosts.map((post) => (
						<BlogPostCard
							title={post.data.title}
							description={post.data.description}
							pubDate={post.data.pubDate}
							slug={post.id}
							tags={post.data.tags}
						/>
					))}
				</div>
			</section>
		)}

		<!-- About blurb -->
		<section class="max-w-5xl mx-auto px-4 sm:px-6 py-12" style="border-top:1px solid var(--border-muted);">
			<h2 class="text-xl font-semibold mb-4" style="color:var(--text-primary);">About</h2>
			<p class="leading-relaxed max-w-2xl mb-4" style="color:var(--text-secondary);">
				Senior software engineer with 12 years of enterprise C#, .NET, and Azure experience.
				Currently exploring the intersection of .NET and agentic AI — building tools, writing
				about trade-offs, and sharing what actually works in production.
			</p>
			<a href="/about" class="text-sm font-medium no-underline transition-colors" style="color:var(--link);"
				onmouseover="this.style.color='var(--link-hover)'" onmouseout="this.style.color='var(--link)'">
				Read more →
			</a>
		</section>

		<Footer />
	</body>
</html>
