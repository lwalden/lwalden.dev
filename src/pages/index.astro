---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { siteConfig } from '../data/siteConfig';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
	.filter((p) => p.data.featured)
	.sort((a, b) => a.data.sortOrder - b.data.sortOrder)
	.slice(0, 3);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead
			title="Home"
			description={siteConfig.description}
			isHomePage={true}
		/>
	</head>
	<body class="bg-white dark:bg-slate-950 text-slate-900 dark:text-slate-100 font-sans antialiased">
		<Header />

		<!-- Hero -->
		<section class="max-w-4xl mx-auto px-4 sm:px-6 pt-20 pb-16">
			<div class="max-w-2xl">
				<h1 class="text-4xl sm:text-5xl font-bold tracking-tight mb-4">
					Laurance Walden
				</h1>
				<p class="text-xl sm:text-2xl text-blue-600 dark:text-blue-400 font-medium mb-6">
					Senior Software Engineer | .NET & Azure | AI & Agentic Systems
				</p>
				<p class="text-lg text-slate-600 dark:text-slate-400 leading-relaxed mb-8">
					I build AI-integrated enterprise systems and write about making .NET work with the agentic future.
					12 years of shipping production software — now making it visible.
					<!-- TODO: Customize this hook with your voice -->
				</p>
				<div class="flex flex-wrap gap-4 mb-8">
					<a href="/blog" class="inline-flex items-center px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors no-underline">
						Read the Blog
					</a>
					<a href="/projects" class="inline-flex items-center px-5 py-2.5 border border-slate-300 dark:border-slate-700 hover:border-blue-400 dark:hover:border-blue-600 text-slate-700 dark:text-slate-300 font-medium rounded-lg transition-colors no-underline">
						View Projects
					</a>
				</div>
				<div class="flex gap-4">
					<a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer" class="text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-100 transition-colors no-underline">
						GitHub ↗
					</a>
					<a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-100 transition-colors no-underline">
						LinkedIn ↗
					</a>
					<a href={siteConfig.social.medium} target="_blank" rel="noopener noreferrer" class="text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-100 transition-colors no-underline">
						Medium ↗
					</a>
				</div>
			</div>
		</section>

		<!-- Featured Projects -->
		{featuredProjects.length > 0 && (
			<section class="max-w-4xl mx-auto px-4 sm:px-6 py-12 border-t border-slate-100 dark:border-slate-800">
				<div class="flex items-baseline justify-between mb-8">
					<h2 class="text-2xl font-bold">Featured Projects</h2>
					<a href="/projects" class="text-sm text-blue-600 dark:text-blue-400 hover:underline no-underline">
						All projects →
					</a>
				</div>
				<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
					{featuredProjects.map((project) => (
						<ProjectCard
							title={project.data.title}
							description={project.data.description}
							technologies={project.data.technologies}
							repo={project.data.repo}
							demo={project.data.demo}
							status={project.data.status}
							slug={project.id}
						/>
					))}
				</div>
			</section>
		)}

		<!-- Latest Blog Posts -->
		{recentPosts.length > 0 && (
			<section class="max-w-4xl mx-auto px-4 sm:px-6 py-12 border-t border-slate-100 dark:border-slate-800">
				<div class="flex items-baseline justify-between mb-8">
					<h2 class="text-2xl font-bold">Latest Posts</h2>
					<a href="/blog" class="text-sm text-blue-600 dark:text-blue-400 hover:underline no-underline">
						All posts →
					</a>
				</div>
				<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
					{recentPosts.map((post) => (
						<BlogPostCard
							title={post.data.title}
							description={post.data.description}
							pubDate={post.data.pubDate}
							slug={post.id}
							tags={post.data.tags}
						/>
					))}
				</div>
			</section>
		)}

		<!-- About blurb -->
		<section class="max-w-4xl mx-auto px-4 sm:px-6 py-12 border-t border-slate-100 dark:border-slate-800">
			<h2 class="text-2xl font-bold mb-4">About</h2>
			<p class="text-slate-600 dark:text-slate-400 leading-relaxed max-w-2xl mb-4">
				Senior software engineer with 12 years of enterprise C#, .NET, and Azure experience.
				Currently exploring the intersection of .NET and agentic AI — building tools, writing
				about trade-offs, and sharing what actually works in production.
				<!-- TODO: Personalize this blurb -->
			</p>
			<a href="/about" class="text-blue-600 dark:text-blue-400 hover:underline no-underline text-sm font-medium">
				Read more →
			</a>
		</section>

		<Footer />
	</body>
</html>
