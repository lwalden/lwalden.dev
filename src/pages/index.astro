---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { siteConfig } from '../data/siteConfig';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
	.filter((p) => p.data.featured)
	.sort((a, b) => a.data.sortOrder - b.data.sortOrder)
	.slice(0, 3);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<BaseHead title="Home" description={siteConfig.description} isHomePage={true} />
	</head>
	<body class="antialiased flex flex-col min-h-screen" style="background-color:var(--dark-bg);color:var(--dark-text);">
		<Header />

		<div class="flex-1">
			<!-- Hero — split-column at lg -->
			<div class="max-w-5xl mx-auto px-4 sm:px-6 pt-20 pb-16" style="border-bottom:1px solid var(--dark-border);">
				<div class="grid lg:grid-cols-[3fr_2fr] gap-12 items-start">
					<!-- Left: main hero content -->
					<div>
						<h1 class="font-bold tracking-tight mb-3" style="font-size:clamp(2.5rem,6vw,3.75rem);color:var(--dark-text);letter-spacing:-0.04em;line-height:1.1;">
							Laurance Walden
						</h1>
						<div class="flex flex-col gap-0.5 mb-8">
							<span class="font-mono" style="font-size:0.8rem;letter-spacing:0.04em;color:var(--dark-text-3);">Senior Software Engineer</span>
							<span class="font-mono" style="font-size:0.8rem;letter-spacing:0.04em;color:var(--dark-text-3);">.NET · Azure · AI & Agentic Systems</span>
						</div>
						<p class="leading-relaxed mb-8" style="color:var(--dark-text-2);">
							I build AI-integrated enterprise systems, write about making .NET work with the agentic future, and share 12 years of hard-won production experience.
						</p>
						<div class="flex flex-wrap gap-3 mb-8">
							<a href="/blog"
								class="inline-flex items-center px-5 py-2.5 rounded font-medium text-sm no-underline transition-colors"
								style="background:var(--dark-text);color:var(--dark-bg);"
								onmouseover="this.style.background='#ffffff'" onmouseout="this.style.background='var(--dark-text)'">
								Read the Blog
							</a>
							<a href="/projects"
								class="inline-flex items-center px-5 py-2.5 rounded font-medium text-sm no-underline transition-colors"
								style="background:transparent;border:1px solid var(--dark-border-hi);color:var(--dark-text-2);"
								onmouseover="this.style.borderColor='var(--dark-text)';this.style.color='var(--dark-text)'"
								onmouseout="this.style.borderColor='var(--dark-border-hi)';this.style.color='var(--dark-text-2)'">
								View Projects
							</a>
						</div>
						<div class="flex gap-5">
							<a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer"
								class="text-xs font-mono no-underline transition-colors" style="color:var(--dark-text-3);"
								onmouseover="this.style.color='var(--dark-text)'" onmouseout="this.style.color='var(--dark-text-3)'">
								github ↗
							</a>
							<a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer"
								class="text-xs font-mono no-underline transition-colors" style="color:var(--dark-text-3);"
								onmouseover="this.style.color='var(--dark-text)'" onmouseout="this.style.color='var(--dark-text-3)'">
								linkedin ↗
							</a>
							<a href={siteConfig.social.medium} target="_blank" rel="noopener noreferrer"
								class="text-xs font-mono no-underline transition-colors" style="color:var(--dark-text-3);"
								onmouseover="this.style.color='var(--dark-text)'" onmouseout="this.style.color='var(--dark-text-3)'">
								medium ↗
							</a>
						</div>
					</div>
					<!-- Right: titanium stat card -->
					<div style="background:var(--titan-bg);border:1px solid var(--titan-border);border-radius:4px;padding:1.5rem;margin-top:0.5rem;">
						<div class="flex flex-col gap-5">
							<div>
								<p class="font-mono mb-1.5" style="font-size:0.65rem;letter-spacing:0.08em;text-transform:uppercase;color:var(--light-text-2);">Experience</p>
								<p class="font-mono mb-0" style="font-size:0.85rem;color:var(--light-text);">12 yrs · .NET / Azure</p>
								<p class="font-mono mb-0" style="font-size:0.85rem;color:var(--light-text-2);">Enterprise distributed systems</p>
							</div>
							<div style="border-top:1px solid var(--titan-border);padding-top:1.25rem;">
								<p class="font-mono mb-1.5" style="font-size:0.65rem;letter-spacing:0.08em;text-transform:uppercase;color:var(--light-text-2);">Focus</p>
								<p class="font-mono mb-0.5" style="font-size:0.85rem;color:var(--light-text);">C# · Azure · AI agents</p>
								<p class="font-mono mb-0.5" style="font-size:0.85rem;color:var(--light-text-2);">ASP.NET · EF Core · Durable</p>
								<p class="font-mono mb-0" style="font-size:0.85rem;color:var(--light-text-2);">Functions · Service Bus</p>
							</div>
							{recentPosts[0] && (
							<div style="border-top:1px solid var(--titan-border);padding-top:1.25rem;">
								<p class="font-mono mb-1.5" style="font-size:0.65rem;letter-spacing:0.08em;text-transform:uppercase;color:var(--light-text-2);">Writing</p>
								<a href={`/blog/${recentPosts[0].id}`} class="no-underline block"
									onmouseover="this.querySelector('.post-title').style.textDecoration='underline'" onmouseout="this.querySelector('.post-title').style.textDecoration='none'">
									<p class="post-title font-mono mb-1" style="font-size:0.85rem;color:var(--light-text);line-height:1.3;">
										{recentPosts[0].data.title}
									</p>
									<p class="font-mono mb-0" style="font-size:0.78rem;color:var(--light-text-2);line-height:1.4;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;">
										{recentPosts[0].data.description}
									</p>
								</a>
							</div>
						)}
						</div>
					</div>
				</div>
			</div>

			<!-- Featured Projects — white section (the one bright moment) -->
			{featuredProjects.length > 0 && (
				<div style="background:var(--light-bg);border-bottom:1px solid var(--titan-border);">
					<div class="max-w-5xl mx-auto px-4 sm:px-6 py-14">
						<div class="flex items-baseline justify-between mb-8">
							<div style="border-left:3px solid var(--light-text-2);padding-left:0.75rem;">
								<h2 class="font-mono" style="font-size:0.8rem;letter-spacing:0.06em;text-transform:uppercase;color:var(--light-text-2);">
									&lt;Projects&gt;
								</h2>
							</div>
							<a href="/projects" class="text-xs font-mono no-underline transition-colors" style="color:var(--light-text-2);"
								onmouseover="this.style.color='var(--light-text)'" onmouseout="this.style.color='var(--light-text-2)'">
								all →
							</a>
						</div>
						<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
							{featuredProjects.map((project) => (
								<ProjectCard
									title={project.data.title}
									description={project.data.description}
									technologies={project.data.technologies}
									repo={project.data.repo}
									demo={project.data.demo}
									status={project.data.status}
									slug={project.id}
									zone="dark"
								/>
							))}
						</div>
					</div>
				</div>
			)}

			<!-- Latest Blog Posts — back to dark, light cards -->
			{recentPosts.length > 0 && (
				<div class="max-w-5xl mx-auto px-4 sm:px-6 py-14" style="border-bottom:1px solid var(--dark-border);">
					<div class="flex items-baseline justify-between mb-8">
						<div style="border-left:3px solid var(--titan-border);padding-left:0.75rem;">
							<h2 class="font-mono" style="font-size:0.8rem;letter-spacing:0.06em;text-transform:uppercase;color:var(--dark-text-3);">
								&lt;Posts&gt;
							</h2>
						</div>
						<a href="/blog" class="text-xs font-mono no-underline transition-colors" style="color:var(--dark-text-3);"
							onmouseover="this.style.color='var(--dark-text)'" onmouseout="this.style.color='var(--dark-text-3)'">
							all →
						</a>
					</div>
					<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
						{recentPosts.map((post) => (
							<BlogPostCard
								title={post.data.title}
								description={post.data.description}
								pubDate={post.data.pubDate}
								slug={post.id}
								tags={post.data.tags}
								zone="light"
							/>
						))}
					</div>
				</div>
			)}

			<!-- About blurb — dark, coda before footer -->
			<div class="max-w-5xl mx-auto px-4 sm:px-6 py-10">
				<div class="flex items-baseline justify-between mb-4">
					<div style="border-left:3px solid var(--titan-border);padding-left:0.75rem;">
						<h2 class="font-mono" style="font-size:0.8rem;letter-spacing:0.06em;text-transform:uppercase;color:var(--dark-text-3);">
							&lt;About&gt;
						</h2>
					</div>
					<a href="/about" class="text-xs font-mono no-underline transition-colors" style="color:var(--dark-text-3);"
						onmouseover="this.style.color='var(--dark-text)'" onmouseout="this.style.color='var(--dark-text-3)'">
						more →
					</a>
				</div>
				<p class="leading-relaxed max-w-xl mb-0" style="color:var(--dark-text-2);">
					Senior software engineer with 12 years in enterprise distributed systems.
					Building at the intersection of .NET and agentic AI — writing about trade-offs
					and sharing what actually works in production.
				</p>
			</div>
		</div>

		<Footer />
	</body>
</html>
