---
interface Props {
	name: string;
	proficiency: 'expert' | 'advanced' | 'intermediate';
}

const { name, proficiency } = Astro.props;

const styles = {
	expert:       'color:var(--text-primary);border-color:var(--border-emphasis);',
	advanced:     'color:var(--text-secondary);border-color:var(--border);',
	intermediate: 'color:var(--text-tertiary);border-color:var(--border-muted);',
};
---

<span
	class="inline-flex items-center px-2.5 py-1 font-mono"
	style={`font-size:0.7rem;letter-spacing:0.04em;text-transform:uppercase;background:var(--bg-surface);border:1px solid;border-radius:3px;${styles[proficiency]}`}>
	{name}
</span>
