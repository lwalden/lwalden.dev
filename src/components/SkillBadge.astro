---
interface Props {
	name: string;
	proficiency: 'expert' | 'advanced' | 'intermediate';
}

const { name, proficiency } = Astro.props;

const styles = {
	expert:       'background:rgba(240,136,62,0.12);border:1px solid rgba(240,136,62,0.3);color:var(--accent);',
	advanced:     'background:var(--color-info-subtle);border:1px solid rgba(88,166,255,0.25);color:var(--color-info);',
	intermediate: 'background:var(--bg-muted);border:1px solid var(--border);color:var(--text-secondary);',
};
---

<span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium" style={styles[proficiency]}>
	{name}
</span>
