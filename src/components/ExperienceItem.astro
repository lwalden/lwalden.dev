---
interface Props {
	company: string;
	title: string;
	startDate: string;
	endDate: string;
	description: string;
	highlights: string[];
	technologies: string[];
}

const { company, title, startDate, endDate, description, highlights, technologies } = Astro.props;
---

<div class="border-l-2 border-slate-200 dark:border-slate-700 pl-6 pb-8 last:pb-0">
	<div class="mb-2">
		<div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
			<h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">{title}</h3>
			<span class="text-sm text-slate-500 dark:text-slate-400 shrink-0">{startDate} – {endDate}</span>
		</div>
		<p class="text-blue-600 dark:text-blue-400 font-medium">{company}</p>
	</div>
	<p class="text-slate-600 dark:text-slate-400 text-sm mb-3">{description}</p>
	<ul class="space-y-1 mb-4">
		{highlights.map((h) => (
			<li class="text-sm text-slate-700 dark:text-slate-300 flex gap-2">
				<span class="text-slate-400 shrink-0 mt-0.5">▸</span>
				<span>{h}</span>
			</li>
		))}
	</ul>
	<div class="flex flex-wrap gap-2">
		{technologies.map((tech) => (
			<span class="text-xs px-2 py-0.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 rounded font-mono">
				{tech}
			</span>
		))}
	</div>
</div>
