---
interface Props {
	company: string;
	title: string;
	startDate: string;
	endDate: string;
	description: string;
	highlights: string[];
	technologies: string[];
}

const { company, title, startDate, endDate, description, highlights, technologies } = Astro.props;
---

<div class="pb-10 last:pb-0" style="border-bottom:1px solid var(--border-muted);">
	<div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-1">
		<h3 class="font-semibold" style="font-size:1rem;color:var(--text-primary);">{title}</h3>
		<span class="font-mono shrink-0" style="font-size:0.7rem;letter-spacing:0.04em;color:var(--text-tertiary);">
			{startDate} – {endDate}
		</span>
	</div>
	<p class="font-mono mb-4" style="font-size:0.75rem;letter-spacing:0.04em;text-transform:uppercase;color:var(--text-tertiary);">
		{company}
	</p>

	<p class="text-sm mb-4" style="color:var(--text-secondary);">{description}</p>

	<ul class="space-y-1.5 mb-4">
		{highlights.map((h) => (
			<li class="text-sm flex gap-2.5" style="color:var(--text-secondary);">
				<span class="shrink-0 mt-0.5" style="color:var(--text-tertiary);">—</span>
				<span>{h}</span>
			</li>
		))}
	</ul>

	<div class="flex flex-wrap gap-2">
		{technologies.map((tech) => (
			<span class="font-mono" style="font-size:0.7rem;letter-spacing:0.04em;text-transform:uppercase;color:var(--text-tertiary);">
				{tech}
			</span>
		))}
	</div>
</div>
